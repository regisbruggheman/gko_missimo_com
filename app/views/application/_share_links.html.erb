<div class="share-links">
  <%= link_to "#modal-send-to-friend", :alt => "Send to friend", :class => "btn btn-gray",
       :data => { :toggle => "modal", :target => "#sendToFriendModal" } do %>
    <i class="fa fa-envelope"></i>
  <% end %>

  <%= link_to("PDF", params.merge(:format => :pdf), :alt => "Download PDF", :class => "btn btn-pink") %>
  <%= link_to "https://www.facebook.com/sharer/sharer.php", :target => "_blank", :alt => "share on facebook", :class => "btn btn-facebook" do %>
    <i class="fa fa-facebook-official text-white"></i> <%= t("share_on_facebook") %>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="sendToFriendModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Send to friend</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="exampleInputEmail1">From</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">To</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your friend's email">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Message</label>
            <textarea class="form-control" id="exampleInputEmail1" placeholder="Your message" rows="4"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success">Send email</button>
      </div>
    </div>
  </div>
</div>
