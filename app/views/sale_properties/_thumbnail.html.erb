<%
  metas = ""
  metas += "bedrooms #{record.meta.bedroom_count}" if record.meta.bedroom_count
  metas += " - #{record.meta.area.name}" if record.meta.area
  geom = local_assigns.has_key?(:geometry) ? geometry : '720x440#'
%>


<%= link_to(record.public_url, :class => "thumbnail thumbnail-property sale-property-thumbnail") do %>
  <h3 class="h4 thumbnail-title"><%= record.title %></h3>
  <em><%= record.meta.code %></em>
  
  <div class="thumbnail-inner">
    <%= image_fu(record.thumbnail, "720x440#", :class => "img-responsive") %>
  
    <div class="caption">
     	
      <% if record.meta.area %>
        <p class="area"><i class="fa fa-map-marker"></i> <%= record.meta.area.name %></p>
      <% end %>
      
      <%= content_tag(:p, :class => "thumbnail-body") do %>
        <%= truncate_html(strip_tags(record.body), :length => 120, :omission => "...") %>
      <% end if record.body.present? %>
      
      <p class="thumbnail-price"><%= sale_price_value(record) %></p>
    </div>
    
    <% unless record.meta.statute.blank? %>
      <div class="thumbnail-badges">
        <p class="thumbnail-badge"><%= record.meta.statute.title %></p>
      </div>
    <% end %>
  </div>
  
  <div class="thumbnail-infos">
    <p>
      <%= realty_meta_tag("bedroom_count", record.bedroom_count) if record.bedroom_count %><br/>
      <%= realty_meta_tag("bathroom_count", record.bathroom_count) if record.bathroom_count %>
    </p>
    <ul class="list-inline thumbnail-icons">
    <% record.stickers.each do |s| %>
      <%= content_tag :li do %>
        <%= image_tag "icon_#{s.css}.svg", :alt => s.name, :class => "thumbnail-icon", 
            :data => { :toggle => "tooltip", :placement => "top" }, 
            :title => s.name %>
      <% end if s.css.present? %>
    <% end %>
    </ul>
  </div>
  
<% end %>